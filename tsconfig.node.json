{
  "compilerOptions": {
    "composite": true,
    "module": "esnext",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": [
    "vite.config.ts",
    "types/**/*.d.ts",
    "build/**/*.d.ts",
    "build/**/*.ts",
    "mock/**/*.ts",
    "package.json"
  ]
}
